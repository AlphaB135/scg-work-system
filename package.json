{
  "name": "scg-work-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "scg-dashboard"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
